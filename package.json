{
    "name": "elysiam-framework",
    "version": "1.0.0",
    "description": "Elysiam Framework",
    "main": "build/index.js",
    "license": "MIT",
    "scripts": {
        "compile": "tsc",
        "build": "rm -rf build/ && npm run compile && npm run copy-views && npm run copy-public",
        "copy-views": "cp -r ./src/services/site/views/ ./build/services/site/views/",
        "copy-public": "cp -r ./src/services/site/public/ ./build/services/site/public/",
        "test": "jest",
        "app": "node build/index.js",
        "prod": "NODE_ENV=prod node build/index.js",
        "start": "PORT=4004 NODE_ENV=dev nodemon --watch ./src --exec ts-node src/index.ts"
    },
    "devDependencies": {
        "@types/jest": "^26.0.0",
        "jest": "^25.5.0",
        "node": "^14.0.0",
        "node-fs-extra": "^0.8.2",
        "supertest": "^4.0.2",
        "ts-jest": "^25.4.0",
        "ts-node": "^8.9.1",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "@types/node": "^13.13.4",
        "axios": "^0.19.2",
        "bcrypt": "^5.0.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "build-url": "^2.0.0",
        "copy-dir": "^1.2.0",
        "cpf": "^2.0.1",
        "express": "^4.17.1",
        "express-handlebars": "^4.0.3",
        "jsonwebtoken": "^8.5.1",
        "moment": "^2.25.3",
        "mysql": "^2.18.1",
        "node-fetch": "^3.1.1",
        "socket.io": "^2.3.0",
        "validate.js": "^0.13.1"
    }
}